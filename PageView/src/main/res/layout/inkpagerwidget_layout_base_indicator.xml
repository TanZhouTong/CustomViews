<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/inkpagerwidget_action_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_40"
        android:paddingTop="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_40"
        android:paddingBottom="@dimen/padding_8"
        app:srcCompat="@drawable/inkpagerwidget_ic_previous" />

    <FrameLayout
        android:id="@+id/inkpagerwidget_indicator_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8" />

    <ImageView
        android:id="@+id/inkpagerwidget_action_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_40"
        android:paddingTop="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_40"
        android:paddingBottom="@dimen/padding_8"
        app:srcCompat="@drawable/inkpagerwidget_ic_next" />
</LinearLayout>